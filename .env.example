# =================================================
# Moldova Direct - Environment Variables Template
# =================================================
# Copy this file to .env and fill in the values
# NEVER commit .env with real credentials to git
# =================================================

# =================================================
# Application Configuration
# =================================================
APP_URL=http://localhost:3000
NODE_ENV=development

# Site URL for production (used for SEO, emails, etc.)
NUXT_PUBLIC_SITE_URL=https://moldova-direct.vercel.app

# Support contact information
NUXT_PUBLIC_SUPPORT_EMAIL=support@moldovadirect.com
SUPPORT_EMAIL=support@moldovadirect.com

# Enable test user functionality (set to false in production)
ENABLE_TEST_USERS=false

# =================================================
# Supabase Configuration (Required)
# =================================================
# Get these from your Supabase project dashboard:
# https://supabase.com/dashboard/project/_/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key
SUPABASE_SERVICE_KEY=your-service-role-key

# =================================================
# Email Service (Required for email features)
# =================================================
# Get from https://resend.com/api-keys

RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL="Your App <noreply@yourdomain.com>"

# =================================================
# Payment Providers (Required for checkout)
# =================================================
# Stripe: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe Webhooks: https://dashboard.stripe.com/webhooks
# Required for payment confirmation and order processing
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal: https://developer.paypal.com/dashboard/ (DEPRECATED - not implemented)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_ENVIRONMENT=sandbox

# =================================================
# Security & Admin
# =================================================
# Generate with: openssl rand -base64 32
IMPERSONATION_JWT_SECRET=your-jwt-secret-here

# Admin alert email for system notifications
ADMIN_ALERT_EMAIL=admin@moldovadirect.com

# =================================================
# GitHub (Optional - for project automation)
# =================================================
GITHUB_TOKEN=

# =================================================
# Testing & Development
# =================================================
# Base URL for testing (leave empty to use localhost:3000)
BASE_URL=
PLAYWRIGHT_TEST_BASE_URL=

# These are used by Playwright tests
# Create test users in your Supabase auth with these credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!

TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=AdminPassword123!

# =================================================
# Optional: Admin User Creation Script
# =================================================
# Used by scripts/create-admin-user.mjs
# If not set, the script will generate secure random passwords

ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=
MANAGER_EMAIL=manager@yourdomain.com
MANAGER_PASSWORD=
CUSTOMER_EMAIL=customer@yourdomain.com
CUSTOMER_PASSWORD=
