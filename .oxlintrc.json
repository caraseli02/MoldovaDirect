{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxlint/main/npm/oxlint/configuration_schema.json",
  "plugins": ["typescript"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "style": "off",
    "restriction": "off",
    "nursery": "off"
  },
  "rules": {
    "no-debugger": "warn",
    "no-console": "off",
    "no-unused-vars": "warn",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "warn"
  },
  "settings": {
    "jsx-runtime": "automatic"
  },
  "ignorePatterns": [
    "node_modules/**",
    ".nuxt/**",
    ".output/**",
    "dist/**",
    "coverage/**",
    "test-results/**",
    "playwright-report/**",
    ".visual-testing/**",
    "supabase/**",
    "public/**",
    ".claude/skills/**",
    ".claude/hooks/**"
  ]
}
