{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deploy": "nuxthub deploy",
    "deploy:preview": "nuxthub deploy --preview",
    "cf:db:create": "wrangler d1 create moldova-direct-db",
    "cf:db:execute": "wrangler d1 execute moldova-direct-db --file=./server/database/migrations/0000_init.sql",
    "cf:kv:create": "wrangler kv:namespace create KV",
    "cf:r2:create": "wrangler r2 bucket create moldova-direct-assets",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium-es",
    "test:firefox": "playwright test --project=firefox-es",
    "test:webkit": "playwright test --project=webkit-es",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:auth": "playwright test tests/e2e/auth.spec.ts",
    "test:products": "playwright test tests/e2e/products.spec.ts",
    "test:checkout": "playwright test tests/e2e/checkout.spec.ts",
    "test:i18n": "playwright test tests/e2e/i18n.spec.ts",
    "test:visual": "playwright test tests/visual/",
    "test:visual:update": "playwright test tests/visual/ --update-snapshots",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install:deps": "playwright install-deps",
    "test:setup": "npm run test:install && npm run test:install:deps",
    "test:ci": "playwright test --project=chromium-es --project=firefox-es",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250813.0",
    "@nuxt/image": "^1.11.0",
    "@nuxthub/core": "^0.9.0",
    "@nuxtjs/i18n": "^10.0.3",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "jose": "^6.0.12",
    "nuxt": "^3.17.7",
    "postgres": "^3.4.7",
    "reka-ui": "^2.4.1",
    "uuid": "^11.1.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "wrangler": "^4.29.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.19.2",
    "@playwright/test": "^1.54.2",
    "@vue/test-utils": "^2.4.6",
    "playwright": "^1.54.2",
    "vitest": "^3.2.4"
  }
}
